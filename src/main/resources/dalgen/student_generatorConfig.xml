<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="dalgen/jdbc.properties"/>

    <classPathEntry location="src/main/resources/lib/mysql-connector-java-5.1.30.jar"/>

    <context id="student" targetRuntime="MyBatis3" >
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <property name="javaFileEncoding" value="UTF-8"/>

        <plugin type="com.autotest.mybatis.ToStringPlugin"/>
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <plugin type="com.autotest.mybatis.RenameExampleClassPlugin"/>
        <plugin
                type="com.autotest.mybatis.MapperConfigPlugin">
            <property name="targetProject" value="src/main/resources" />
            <property name="targetPackage" value="dal" />
            <property name="fileName" value="student.MapperConfig.xml" />
        </plugin>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="${ds.student.mysqlUrl}"
                        userId="${ds.student.username}"
                        password="${ds.student.password}">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="dal.model.student" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="dal.mapping.student" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="dal.dao.student" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="%">
        </table>

    </context>
</generatorConfiguration>
